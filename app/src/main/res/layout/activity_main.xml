<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <com.kelmer.android.fabmenu.radial.RadialFabMenu
        android:id="@+id/gooey_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content"
        app:fab_radius="@dimen/big_circle_radius"
        app:menu_radius="@dimen/small_circle_radius"
        app:menu_drawable="@array/drawable_array"
        />


    <com.kelmer.android.fabmenu.fab.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="10dp"
        app:fab_showShadow="false"
        app:fab_colorNormal="@color/colorAccent"
        app:menu_fab_label="My menu"
        android:src="@drawable/ic_add"
        app:layout_constraintTop_toTopOf="parent"
        />

    <com.kelmer.android.fabmenu.linear.LinearFabMenu
        android:id="@+id/menu_red"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:padding="10dp"
        app:menu_showShadow="false"
        app:menu_backgroundColor="#ccffffff"
        app:menu_fab_label="Menu label">

        <com.kelmer.android.fabmenu.fab.FloatingActionButton
            android:id="@+id/fab1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit"
            app:fab_colorNormal="@color/colorAccent"
            app:fab_size="mini"
            app:fab_label="Disabled" />

        <com.kelmer.android.fabmenu.fab.FloatingActionButton
            android:id="@+id/fab2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit"
            app:fab_colorNormal="@color/colorAccent"
            app:fab_size="mini"
            app:fab_label="Remove button" />

        <com.kelmer.android.fabmenu.fab.FloatingActionButton
            android:id="@+id/fab3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_star"
            app:fab_colorNormal="@color/colorAccent"
            app:fab_size="mini"
            app:fab_label="Restore Button" />


    </com.kelmer.android.fabmenu.linear.LinearFabMenu>



</androidx.constraintlayout.widget.ConstraintLayout>